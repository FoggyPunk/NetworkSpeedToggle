<Application x:Class="NetworkSpeedToggle.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:tb="http://www.hardcodet.net/taskbar">
    <Application.Resources>
        <ContextMenu x:Key="TrayMenu">
            <MenuItem Header="Toggle Speed (1.0 Gbps / 2.5 Gbps)" Click="MenuToggle_Click" />
            <Separator />
            <MenuItem Header="Exit and Close" Click="MenuExit_Click" />
        </ContextMenu>

        <tb:TaskbarIcon x:Key="MyNotifyIcon"
                        ToolTipText="Network Speed Monitor"
                        ContextMenu="{StaticResource TrayMenu}"
                        TrayMouseDoubleClick="TrayIcon_DoubleClick">
        </tb:TaskbarIcon>
    </Application.Resources>
</Application>